{
  "extends": "airbnb-base",
  "globals": {
    "describe": false,
    "it": false,
    "before": false,
    "Helper": false,
  },
  "rules": {
    "no-console": [
      "error",
      {
        "allow": [
          "info",
          "warn",
          "error"
        ]
      }
    ],
    "class-methods-use-this": "off",
    "no-underscore-dangle": "off",
    "max-len": [
      "error",
      150,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-shadow": "off",
    "no-param-reassign": "off",
    "no-nested-ternary": "off",
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ]
  }
}
